<beans>

    <bean id="userService" class="cn.xiaolong.bean.UserService"/>

    <bean class="com.xiaolong.aop.framework.autoProxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="beforeAdvice" class="cn.xiaolong.bean.UserServiceBeforeAdvice"/>

    <bean id="methodInterceptor" class="com.xiaolong.aop.framework.adapter.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>

    <bean id="pointcutAdvisor" class="com.xiaolong.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* cn.xiaolong.bean.IUserService.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>

</beans>

